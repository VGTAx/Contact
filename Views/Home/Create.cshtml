@model Contact.Models.Contacts

@{
    ViewData["Title"] = "Create";
    }
    <!--Форма модального окна Create(Создать)-->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createModalLabel">Создать контакт</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form id="myForm" asp-action="Create" onsubmit="validateForm()" >             
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                 <label asp-for="Name"  class="control-label">Имя</label>
                 <input asp-for="Name" id="Name" type="text" class="form-control"/>
                 <span asp-validation-for="Name"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Номер</label>
                <input asp-for="PhoneNumber" id="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label">Должность</label>
                <input asp-for="JobTitle" id="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label">Дата Рождения</label>
                <input asp-for="BirthDate" id="BirthDay" class="form-control" />
                <span asp-validation-for="BirthDate"  class="text-danger"></span>
            </div>    
            <div class="form-group">
                <br />
                <input type="submit" class="btn btn-primary" value="Создать"/>
            </div>  
           </form>
      </div>      
    </div>   
  </div>
</div>

<!--Скрипт валидации введенных данных-->
<script src="~/js/site.js"></script>