@model Contact.Models.Contacts

@{
    ViewData["Title"] = "Details";
}
 @await Html.PartialAsync("Edit")
<h1>Информация</h1>

<div>
    <h4>Контакт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Имя")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
             @Html.DisplayName("Номер телефона")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Должность")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Дата Рождения")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal">Редактировать</a> |
    <a asp-action="Index" class="btn btn-success">Назад</a>
</div>
